<Window x:Class="SousChapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SousChapp"
        mc:Ignorable="d"
        Title="Sous-Chapp" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="118" Margin="96,265,0,0" VerticalAlignment="Top" Width="120" Source="padthai.png"/>
        <Image HorizontalAlignment="Left" Height="118" Margin="96,84,0,0" VerticalAlignment="Top" Width="120" Source="chocolatechipcookies.png"/>
        <Menu x:Name="mainMenu" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="165" Margin="0,29,0,0">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#fd9f84" Offset="0"/>
                    <GradientStop Color="#ff5b59" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem x:Name="optIng" Header="Search by Ingredients" Height="40" Width="165" MouseEnter="MenuMouseEnter" MouseLeave="MenuMouseLeave" Click="Option_Click" Foreground="White"/>
            <MenuItem x:Name="optCui" Header="Search by Cuisine" Height="40" Width="165" Click="Option_Click" MouseEnter="MenuMouseEnter" MouseLeave="MenuMouseLeave" Foreground="White"/>
            <MenuItem x:Name="optDiff" Header="Search by Difficulty" Height="40" Width="165" Click="Option_Click" MouseEnter="MenuMouseEnter" MouseLeave="MenuMouseLeave" Foreground="White"/>
            <MenuItem x:Name="optSplit" Header="Split" Height="40" Width="165" Click="Split_Screen"  MouseEnter="MenuMouseEnter" MouseLeave="MenuMouseLeave" Foreground="White" />
            <MenuItem x:Name="optExit" Header="Exit" Height="40" Width="165" Click="Option_Click" MouseEnter="MenuMouseEnter" MouseLeave="MenuMouseLeave" Foreground="White" />
        </Menu>
        <Rectangle HorizontalAlignment="Left" Height="798" Stroke="Black" VerticalAlignment="Top" Width="30" Margin="382,-385,0,0" RenderTransformOrigin="0.5,0.5">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#fd9f84" Offset="1"/>
                    <GradientStop Color="#FFDC4040"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button x:Name="showMenu" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="27" Click="ShowMenu_Click" RenderTransformOrigin="-0.342,-0.861" Height="29" BorderBrush="{x:Null}" Background="#fd9f84" Foreground="{x:Null}">
            <Image Source="menu.png"/>
        </Button>
        <Label Content="Sous Chapp" HorizontalAlignment="Left" Margin="351,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bodoni MT" FontSize="20" Height="40"/>
        <Image HorizontalAlignment="Left" Height="118" Margin="464,84,0,0" VerticalAlignment="Top" Width="120" Source="frenchomelet.png" MouseDown="Image_MouseDown"/>
        <Image HorizontalAlignment="Left" Height="118" Margin="464,265,0,0" VerticalAlignment="Top" Width="120" Source="aglioeolio.png"/>
        <ScrollBar HorizontalAlignment="Left" Margin="775,29,0,0" VerticalAlignment="Top" Height="390"/>
        <TextBox x:Name="text1" HorizontalAlignment="Left" Height="19" Margin="617,6,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="116"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="738,5,0,0" VerticalAlignment="Top" Width="44"/>
        <Rectangle HorizontalAlignment="Left" Height="118" Margin="464,84,0,0" VerticalAlignment="Top" Width="240" MouseEnter="Border_highlight" StrokeThickness="3" MouseLeave="Border_dehighlight">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#fd9f84" Offset="0"/>
                    <GradientStop Color="#ff5b59" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <TextBlock HorizontalAlignment="Left" Margin="221,309,0,0" TextWrapping="Wrap" Text="Pad Thai" VerticalAlignment="Top" Height="28" Width="91" TextAlignment="Center" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="216,114,0,0" TextWrapping="Wrap" Text="Chocolate Chip Cookie" VerticalAlignment="Top" Height="57" Width="120" TextAlignment="Center" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="589,114,0,0" TextWrapping="Wrap" Text="French Omelette" VerticalAlignment="Top" Height="57" Width="107" TextAlignment="Center" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="589,309,0,0" TextWrapping="Wrap" Text="Aglio E Olio" VerticalAlignment="Top" Height="57" Width="107" TextAlignment="Center" FontSize="16"/>
    </Grid>
</Window>
